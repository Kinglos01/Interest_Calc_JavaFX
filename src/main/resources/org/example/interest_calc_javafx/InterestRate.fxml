<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="370.0" prefWidth="479.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.interest_calc_javafx.Interest_Button_Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Welcome to my Interest Calculator" />
   <VBox>
      <children>
         <Label text="Annual Interest Rate: " />
         <TextField fx:id="Annual_Interest_Rate_Text" alignment="TOP_LEFT" />
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Number Of Years:" />
         <TextField fx:id="Number_of_Years_Text" />
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Loan Amount:" />
         <TextField fx:id="Loan_Amount_Text" />
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Monthly Payment:" />
         <TextField fx:id="Monthly_Payment_Text" />
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Total Payment:" />
         <TextField fx:id="Total_Payment_Text" />
      </children>
   </VBox>

    <Label fx:id="welcomeText" />
    <Button fx:id="Calculate_Button" maxWidth="80.0" onAction="#onHelloButtonClick" prefHeight="26.0" prefWidth="58.0" text="Calculate" />
</VBox>
